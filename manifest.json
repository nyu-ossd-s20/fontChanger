{

  "manifest_version": 2,
  "name": "Font Changer",
  "version": "1.0",

  "description": "Adds a browser extension to the toolbar that allows the user the change the font on a website.",
  "homepage_url": "https://github.com/nyu-ossd-s20/fontChanger",
  "icons": {
    "48": "icons/"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/change.js"]
    }
  ],


  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/",
    "default_title": "Font Changer",
    "default_popup": "popup/chooseFont.html"
  },

  "web_accessible_resources": [
    "fonts/",
    "fonts/",
    "fonts/"
  ]

}
